scion_losing_offensive_war {
    any_war = {
        defender_war_exhaustion < 0.6
        any_attacker = {
            is_same_value = root
        }

        any_defender = {
            OR = {
                relative_power = {
                    category = fleet
                    value = overwhelming
                    who = root
                }

                relative_power = {
                    value = superior
                    who = root
                    category = fleet
                }

            }

        }

        attacker_war_exhaustion > 0.8
    }

}

scion_losing_defensive_war_combatant {
    any_war = {
        defender_war_exhaustion > 0.8
        any_attacker = {
            is_same_value = prevprev
            OR = {
                relative_power = {
                    value = overwhelming
                    who = root
                    category = fleet
                }

                relative_power = {
                    category = fleet
                    value = superior
                    who = root
                }

            }

        }

        attacker_war_exhaustion < 0.6
        any_defender = {
            is_same_value = root
        }

    }

}

