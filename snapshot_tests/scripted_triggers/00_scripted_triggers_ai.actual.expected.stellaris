buildings_has_crystals {
    OR = {
        AND = {
            free_building_slots > 1
            owner = {
                has_monthly_income = {
                    value > 0
                    resource = rare_crystals
                }

            }

        }

        owner = {
            has_monthly_income = {
                resource = rare_crystals
                value >= 3
            }

        }

    }

    exists = owner
}

