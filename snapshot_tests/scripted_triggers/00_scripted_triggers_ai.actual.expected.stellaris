        has_designation = col_farming
        has_designation = col_ring_farming
        has_designation = col_habitat_farming
        has_designation = col_habitat_gestalt_farming
    }

}

buildings_has_motes {
    exists = owner
    OR = {
        owner = {
            has_monthly_income = {
                value >= 3
                resource = volatile_motes
            }

        }

        AND = {
            owner = {
                has_monthly_income = {
                    value > 0
                    resource = volatile_motes
                }

            }

            free_building_slots > 1
        }

    }

}

