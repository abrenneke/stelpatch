buildings_difficulty {
    is_difficulty > 2
    has_resource = {
        amount > 1000
        type = energy
    }

    has_resource = {
        type = minerals
        amount > 2000
    }

    years_passed > 20
}

districts_good_energy {
    planet = {
        OR = {
            has_planet_flag = buildings_good_energy
            has_modifier = hazardous_weather
            has_modifier = divine_algorithm
            has_modifier = energy_relic
            has_modifier = gas_rich_planet_fo_realz
        }

    }

}

jobs_any_research {
    planet = {
        any_owned_pop = {
            OR = {
                has_job = head_researcher
                has_job = researcher
                has_job = brain_drone
                has_job = calculator
                has_job = dimensional_portal_researcher
                has_job = dimensional_portal_researcher_gestalt
            }

        }

    }

}

has_foundry_designation {
    OR = {
        has_designation = col_foundry
        has_designation = col_ecu_foundry
        has_designation = col_habitat_foundry
        has_designation = col_mac_foundry
        has_designation = col_hiv_foundry
    }

}

has_industrial_designation {
    OR = {
        has_designation = col_industrial
        has_designation = col_habitat_industrial
        has_designation = col_ecu_industrial
    }

}

country_uses_food {
    else = {
        resource_expenses_compare = {
            resource = food
            value > 0
        }

    }

    if = {
        limit = {
            resource_expenses_compare = {
                resource = food
                value = 0
            }

            resource_expenses_compare = {
                resource = minerals
                value = 0
            }

            resource_expenses_compare = {
                value = 0
                resource = energy
            }

        }

    }

}

country_uses_consumer_goods {
    if = {
        limit = {
            resource_expenses_compare = {
                value = 0
                resource = food
            }

            resource_expenses_compare = {
                value = 0
                resource = minerals
            }

            resource_expenses_compare = {
                resource = energy
                value = 0
            }

        }

    }

    else = {
        resource_expenses_compare = {
            resource = consumer_goods
            value > 0
        }

    }

}

jobs_work_minerals_goods {
    owner = {
        has_monthly_income = {
            resource = minerals
            value < 50
        }

        is_ai = yes
        OR = {
            AND = {
                has_resource = {
                    type = minerals
                    amount < 5000
                }

                has_resource = {
                    type = consumer_goods
                    amount > 1500
                }

            }

            AND = {
                has_resource = {
                    type = minerals
                    amount < 3000
                }

                has_resource = {
                    amount > 750
                    type = consumer_goods
                }

            }

            AND = {
                has_resource = {
                    type = minerals
                    amount < 501
                }

                has_resource = {
                    amount > 500
                    type = consumer_goods
                }

            }

        }

    }

    exists = owner
}

