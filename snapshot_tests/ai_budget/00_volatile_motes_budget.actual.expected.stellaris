volatile_motes_expenditure_starbases {
    category = starbases
    potential = {
        any_owned_nonprimary_starbase = {
            exists = planet
            has_starbase_size >= orbital_ring_tier_2
        }

    }

    resource = volatile_motes
    type = expenditure
    weight = {
        modifier = {
            factor = 0
            NOT = {
                any_owned_nonprimary_starbase = {
                    exists = planet
                    OR = {
                        AND = {
                            count_starbase_buildings = {
                                count = 0
                            }

                            has_starbase_size = orbital_ring_tier_2
                        }

                        AND = {
                            has_starbase_size = orbital_ring_tier_3
                            count_starbase_buildings = {
                                count < 2
                            }

                        }

                    }

                }

            }

        }

        weight = 0.2
    }

}

