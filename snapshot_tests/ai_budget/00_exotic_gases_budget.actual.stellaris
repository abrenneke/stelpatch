exotic_gases_expenditure_starbases {
    potential = {
        any_owned_nonprimary_starbase = {
            has_starbase_size >= orbital_ring_tier_2
            exists = planet
        }

    }

    category = starbases
    resource = exotic_gases
    type = expenditure
    weight = {
        modifier = {
            factor = 0
            NOT = {
                any_owned_nonprimary_starbase = {
                    OR = {
                        AND = {
                            count_starbase_buildings = {
                                count = 0
                            }

                            has_starbase_size = orbital_ring_tier_2
                        }

                        AND = {
                            count_starbase_buildings = {
                                count < 2
                            }

                            has_starbase_size = orbital_ring_tier_3
                        }

                    }

                    exists = planet
                }

            }

        }

        weight = 0.2
    }

}

