trade_action_bulwark_prefabs {
    potential = {
        FROM = {
            NOT = {
                has_modifier = bulwark_prefabs_overlord
            }

        }

        has_overlord_dlc = yes
        has_overlord = FROM
        NOT = {
            is_action_active = {
                with_country = FROM
                action = trade_action_bulwark_prefabs
            }

        }

        is_specialist_subject_type = {
            TYPE = bulwark
        }

    }

    ai_weight = {
        weight = 1
        modifier = {
            weight = 8
            OR = {
                has_monthly_income = {
                    value < 2
                    resource = alloys
                }

                AND = {
                    is_specialist_subject_tier = {
                        TYPE = bulwark
                        TIER = 3
                    }

                    has_monthly_income = {
                        resource = alloys
                        value < 6
                    }

                }

                AND = {
                    has_monthly_income = {
                        resource = alloys
                        value < 4
                    }

                    is_specialist_subject_tier = {
                        TYPE = bulwark
                        TIER = 2
                    }

                }

            }

        }

        modifier = {
            weight = 1.5
            OR = {
                AND = {
                    has_monthly_income = {
                        resource = alloys
                        value < 12
                    }

                    is_specialist_subject_tier = {
                        TYPE = bulwark
                        TIER = 3
                    }

                }

                AND = {
                    has_monthly_income = {
                        resource = alloys
                        value < 8
                    }

                    is_specialist_subject_tier = {
                        TYPE = bulwark
                        TIER = 2
                    }

                }

                has_monthly_income = {
                    value < 4
                    resource = alloys
                }

            }

        }

    }

    on_deal_ended_sender_effect = {
        remove_modifier = bulwark_prefabs_subject
    }

    active = {
        has_overlord = FROM
        is_specialist_subject_type = {
            TYPE = bulwark
        }

    }

    fire_and_forget = no
    on_traded_effect = {
        else_if = {
            ROOT = {
                add_modifier = {
                    multiplier = 2
                    modifier = bulwark_prefabs_subject
                }

            }

            FROM = {
                add_modifier = {
                    modifier = bulwark_prefabs_overlord
                    multiplier = 2
                }

            }

            custom_tooltip = double_newline
            limit = {
                is_specialist_subject_tier = {
                    TIER = 2
                    TYPE = bulwark
                }

            }

        }

        else = {
            FROM = {
                add_modifier = {
                    modifier = bulwark_prefabs_overlord
                }

            }

            custom_tooltip = double_newline
            ROOT = {
                add_modifier = {
                    modifier = bulwark_prefabs_subject
                }

            }

        }

        if = {
            custom_tooltip = double_newline
            FROM = {
                add_modifier = {
                    multiplier = 3
                    modifier = bulwark_prefabs_overlord
                }

            }

            ROOT = {
                add_modifier = {
                    modifier = bulwark_prefabs_subject
                    multiplier = 3
                }

            }

            limit = {
                is_specialist_subject_tier = {
                    TYPE = bulwark
                    TIER = 3
                }

            }

        }

    }

    on_deal_ended_recipient_effect = {
        remove_modifier = bulwark_prefabs_overlord
    }

}

