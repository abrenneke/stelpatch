spiritualist_ethics_from_relations {
    base = 1
    complex_trigger_modifier = {
        trigger = count_relation
        mode = add
        parameters = {
            limit = {
                OR = {
                    is_in_federation_with = root
                    has_defensive_pact = root
                    has_commercial_pact = root
                }

                is_spiritualist = yes
            }

        }

        mult = 0.3
    }

    complex_trigger_modifier = {
        parameters = {
            limit = {
                has_migration_access = root
                is_subject = no
                is_spiritualist = yes
            }

        }

        trigger = count_relation
        mode = add
        mult = 0.5
    }

}

xenophobe_ethics_from_relations {
    base = 1
    complex_trigger_modifier = {
        parameters = {
            limit = {
                is_homicidal = yes
            }

        }

        mult = 0.25
        mode = add
        trigger = count_neighbor_country
    }

    complex_trigger_modifier = {
        parameters = {
            limit = {
                has_migration_access = root
                is_subject = no
                NOT = {
                    is_same_species = root
                }

            }

        }

        mult = -0.2
        mode = add
        trigger = count_relation
    }

}

ethics_from_federation_envoys {
    complex_trigger_modifier = {
        mult = 0.2
        mode = add
        parameters = {
            limit = {
                has_envoy_task = {
                    task = federation
                }

            }

        }

        trigger = count_envoy
    }

    base = 1
}

authoritarian_ethics_from_relations {
    base = 1
    complex_trigger_modifier = {
        mult = 0.3
        mode = add
        trigger = count_relation
        parameters = {
            limit = {
                OR = {
                    is_in_federation_with = root
                    has_defensive_pact = root
                }

                is_authoritarian = yes
            }

        }

    }

}

materialist_ethics_from_relations {
    base = 1
    complex_trigger_modifier = {
        trigger = count_relation
        mode = add
        mult = 0.25
        parameters = {
            limit = {
                is_materialist = yes
                root = {
                    has_research_agreement = prev
                }

            }

        }

    }

    complex_trigger_modifier = {
        trigger = count_relation
        parameters = {
            limit = {
                is_materialist = yes
                OR = {
                    is_in_federation_with = root
                    has_commercial_pact = root
                    has_defensive_pact = root
                    AND = {
                        is_subject = no
                        has_migration_access = root
                    }

                }

            }

        }

        mode = add
        mult = 0.3
    }

}

egalitarian_ethics_from_relations {
    complex_trigger_modifier = {
        mult = 0.3
        parameters = {
            limit = {
                OR = {
                    has_defensive_pact = root
                    is_in_federation_with = root
                    has_commercial_pact = root
                }

                is_egalitarian = yes
            }

        }

        trigger = count_relation
        mode = add
    }

    complex_trigger_modifier = {
        mode = add
        trigger = count_relation
        parameters = {
            limit = {
                has_migration_access = root
                is_subject = no
                is_egalitarian = yes
            }

        }

        mult = 0.5
    }

    base = 1
}

xenophile_ethics_from_relations {
    base = 1
    complex_trigger_modifier = {
        trigger = count_relation
        mult = 0.3
        parameters = {
            limit = {
                has_migration_access = root
                NOT = {
                    is_same_species = root
                }

                is_subject = no
            }

        }

        mode = add
    }

    complex_trigger_modifier = {
        trigger = count_relation
        mode = add
        parameters = {
            limit = {
                NOT = {
                    is_same_species = root
                }

                is_subject = no
                OR = {
                    has_defensive_pact = root
                    has_commercial_pact = root
                    is_in_federation_with = root
                }

            }

        }

        mult = 0.2
    }

    max = 2
}

