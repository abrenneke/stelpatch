{
  "name": "cw-lsp-client",
  "description": "CW LSP Client for testing",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "stellaris",
        "aliases": [
          "Stellaris",
          "stellaris"
        ],
        "extensions": [
          ".mod",
          ".gui",
          ".gfx",
          ".txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "cwlsp.restartServer",
        "title": "Restart CW Language Server"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.0"
  }
}