{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/vscode-extension/out/**/*.js"
      ],
      "preLaunchTask": "npm: compile"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'stelpatch'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=stelpatch"
        ],
        "filter": {
          "name": "stelpatch",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'stelpatch'",
      "cargo": {
        "args": [
          "build",
          "--bin=stelpatch",
          "--package=stelpatch"
        ],
        "filter": {
          "name": "stelpatch",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'stelpatch'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=stelpatch",
          "--package=stelpatch"
        ],
        "filter": {
          "name": "stelpatch",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration test 'parser'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--test=parser",
          "--package=stelpatch"
        ],
        "filter": {
          "name": "parser",
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}